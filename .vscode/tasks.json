{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Fetch Svelte website",
            "type": "shell",
            "command": "rm -rf __svelte && git clone git@github.com:sveltejs/svelte.git __svelte && cd __svelte/site && npm install -D locate-character && npm ci && npm run update && rsync -av ${workspaceRoot}/svelte/site/ ${workspaceRoot}/__svelte/site/",
            "problemMatcher": []
        },
        {
            "label": "Run Svelte website on localhost",
            "type": "shell",
            "command": "cd __svelte/site && npm run dev",
            "problemMatcher": []
        },
        {
            "label": "Update website content",
            "type": "shell",
            "command": "rsync -av ${workspaceRoot}/svelte/site/ ${workspaceRoot}/__svelte/site/",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}